{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./"
  },
  "include": [
    "src/**.ts",
    "src/**/**.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}